<UserControl x:Class="SWPProjekt.View.WarehouseScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWPProjekt.View" 
             xmlns:viewModel="clr-namespace:SWPProjekt.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel  VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Horizontal">
            <TextBlock Text="Lista magazynów >" FontSize="18" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>
            <TextBlock Text="{Binding CurrentWarehouse.Name}"   FontSize="18" Foreground="black"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Orientation="Vertical" Width="1103" Margin="0,43,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nazwa : " FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
                <TextBlock  Text="{Binding CurrentWarehouse.Name}" FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Id: " FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
                <TextBlock  Text="{Binding CurrentWarehouse.Id}" FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Adres: " FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
                <TextBlock  Text="{Binding CurrentWarehouse.Address}" FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Kod pocztowy: " FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
                <TextBlock  Text="{Binding CurrentWarehouse.Zip}" FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Zajęty: " FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
                <TextBlock FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentWarehouse.Full}" Value="0">
                                    <Setter Property="Text" Value="nie" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentWarehouse.Full}" Value="1">
                                    <Setter Property="Text" Value="tak" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Surowce: " FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
                <TextBlock FontSize="20" Foreground="black" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20"></TextBlock>
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</UserControl>
