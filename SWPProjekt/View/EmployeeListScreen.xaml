<UserControl x:Class="SWPProjekt.View.EmployeeListScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWPProjekt.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Lista Pracowników" Margin="10"/>
            <DataGrid IsReadOnly="True" ItemsSource="{Binding EmployeeList}" SelectedItem ="{Binding CurrentEmployee}" AutoGenerateColumns="False" FontSize="{Binding MainModel.FontSize}">
                <DataGrid.Columns>
                    <DataGridTextColumn/>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*"/>
                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Nazwisko" Binding="{Binding Surname}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Command="{Binding CreateCommand}" Width="250" Height="32" Background="DodgerBlue" BorderBrush="DodgerBlue" Content="+ Utwórz konto użytkownika" Margin="20"/>
        </StackPanel>
    </Grid>
</UserControl>
